<form method="post" action="/order/create/submit">
    
    <div class="mb-3">
        <select class="form-select" aria-label="select size" name="size">
            <option selected>Open this select menu</option>
            <option value="1">S</option>
            <option value="2">M</option>
            <option value="3">L</option>
            <option value="4">XL</option>
        </select>
    </div>


    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="ham" id="topping_h">
            <label class="form-check-label" for="flexCheckDefault">
                Ham $3.50
            </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="pepperoni" id="topping_p" checked>
            <label class="form-check-label" for="flexCheckChecked">
                Pepperoni $3.00
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="mushrooms" id="topping_m" checked>
            <label class="form-check-label" for="flexCheckChecked">
                Mushrooms $2.00
        </label>
    </div>
    <div class="col-12 text-center mt-3">
        <button type="submit" class="btn btn-primary">Submit Order</button>
    </div>

</form>