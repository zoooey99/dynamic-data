<header class="bg-dark text-white text-center py-4 mb-4">
    {{>navigation}}
  </header>
<div class="container mt-5">
  <h2 class="mb-4">Customer List</h2>

  {{#if customers}}
    <div class="table-responsive">
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>ZIP</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each customers}}
            <tr>
              <td>{{this.dataValues.id}}</td>
              <td>{{this.dataValues.firstName}} {{this.dataValues.lastName}}</td>
              <td>{{this.dataValues.email}}</td>
              <td>{{this.dataValues.address}}</td>
              <td>{{this.dataValues.city}}</td>
              <td>{{this.dataValues.state}}</td>
              <td>{{this.dataValues.zip}}</td>
              <td>{{this.dataValues.phone}}</td>
              <td>
                <div class="btn-group btn-group-sm" role="group">
                  <a href="/customers/detail/{{this.dataValues.id}}" class="btn btn-outline-primary">View</a>
                  <a href="/customers/edit/{{this.dataValues.id}}" class="btn btn-outline-secondary">Edit</a>
                  <a href="/customers/delete/{{this.dataValues.id}}" class="btn btn-outline-danger">Delete</a>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="alert alert-info">No customers found in the database.</div>
  {{/if}}

  <div class="text-center mt-4">
    <a href="/" class="btn btn-primary">Add New Customer</a>
  </div>
</div>
