<div class="container mt-5">
  <h2 class="mb-4">Customer List</h2>

  {{#if customers}}
    <div class="table-responsive">
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>ZIP</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each customers}}
            <tr>
              <td>{{id}}</td>
              <td>{{firstName}} {{lastName}}</td>
              <td>{{email}}</td>
              <td>{{address}}</td>
              <td>{{city}}</td>
              <td>{{state}}</td>
              <td>{{zip}}</td>
              <td>{{phone}}</td>
              <td>
                <div class="btn-group btn-group-sm" role="group">
                  <a href="/customers/detail/{{this.id}}" class="btn btn-outline-primary">View</a>
                  <a href="/customers/edit/{{this.id}}" class="btn btn-outline-secondary">Edit</a>
                  <a href="/customers/delete/{{this.id}}" class="btn btn-outline-danger">Delete</a>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="alert alert-info">No customers found in the database.</div>
  {{/if}}

  <div class="text-center mt-4">
    <a href="/" class="btn btn-primary">Add New Customer</a>
  </div>
</div>
