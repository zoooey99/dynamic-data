<div class="row">
    {{#each images}}
    <div class="col-lg-3 gallery">
        <a href="#" data-bs-toggle="modal" data-bs-target="#modal-{{@index}}">
            <img class="img-fluid" src="{{this.url}}" alt="">
        </a>
    </div>
    <div class="modal fade" id="modal-{{@index}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                <img class="img-fluid" src="{{this.url}}" alt="">
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>